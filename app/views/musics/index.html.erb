<div class="divider divider-centered">
  <h2>Records</h2>
</div>

<% if user_signed_in? %>
  <div class="admin">
  <%= link_to 'New Music', new_music_path %>
  </div>
<% end %>

<section class="musics">
  
  <% @musics.each do |music| %>
  <article>

    <% if user_signed_in? %>
      <div class="admin">
      <%= link_to 'Edit', edit_music_path(music) %>
      <%= link_to 'Destroy', music, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
    
    <%= link_to image_tag(music.cover.url(:thumb)), music %>
    <%= link_to music.title, music %>
    <p>Aeolus</p>
  </article>
  <% end %>
  
</section>

<% if false %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musics.each do |music| %>
      <tr>
        <td><%= music.title %></td>
        <td><%= music.release %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Music', new_music_path %>
<% end %>