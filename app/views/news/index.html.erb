<div class="divider divider-centered">
  <h2>News</h2>
</div>

<section class="news">
  
  <main>
    <div class="admin"><%= link_to 'New News', new_news_path %></div>
    
    <% @news.each do |news| %>
    
    <div class="admin">
        <%= link_to 'Show', news %>
        <%= link_to 'Edit', edit_news_path(news) %>
        <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    
    <article>
      <%= link_to news.title, news %>
      <em>By (author) on <%= link_to news.created_at.to_formatted_s(:long), news %></em>
      <%= news.body.html_safe %>
    </article>
    <% end %>
    
  </main>
  
  <% @latest_news = News.limit(3).order(created_at: :desc).where(:published => true) %>
  <%= render 'latest_news', :latest_news => @latest_news %>
  
</section>